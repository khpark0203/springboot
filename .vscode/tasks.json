{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "gradle",
            "id": "/home/khpark0203/github/khpark0203/springbootbootRundemo",
            "script": "clean",
            "description": "Runs this project as a Spring Boot application.",
            "group": "application",
            "project": "demo",
            "buildFile": "/home/khpark0203/github/khpark0203/springboot/build.gradle",
            "rootProject": "demo",
            "projectFolder": "/home/khpark0203/github/khpark0203/springboot",
            "workspaceFolder": "/home/khpark0203/github/khpark0203/springboot",
            "args": "bootRun -Dorg.gradle.jvmargs='-agentlib:jdwp=transport=dt_socket,server=y,suspend=y,address=${input:port}'",
            "javaDebug": false,
            "problemMatcher": [
                "$gradle"
            ],
            "label": "gradle: bootRun",
            "isBackground": true,
        },
        {
            "label": "gradle: terminate",
            "type": "shell",
            "command": "echo ${input:terminate}",
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "terminate",
            "type": "command",
            "command": "workbench.action.tasks.terminate",
            "args": "gradle: bootRun"
        },
        {
            "id": "port",
            "type": "command",
            "command": "extension.commandvariable.file.content",
            "args": {
                "fileName": "${workspaceFolder}/.vscode/launch.json",
                "json": "content.configurations[0].port"
            }
        }
    ]
}